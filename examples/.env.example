# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Google Gemini API Configuration
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# LLM Provider Selection: "anthropic", "gemini", or "openai"
# Change this to switch between providers
LLM_PROVIDER=anthropic

# Supabase PostgreSQL Database Configuration
# Get these from your Supabase project settings -> Database -> Connection String
SUPABASE_HOST=your_supabase_host.supabase.com
SUPABASE_PORT=5432
SUPABASE_DATABASE=postgres
SUPABASE_USER=your_supabase_user
SUPABASE_PASSWORD=your_supabase_password

# Optional: Connection string (can be used instead of individual parameters)
# SUPABASE_CONNECTION_STRING=postgresql://postgres:password@host:5432/postgres

# Server Configuration (Optional)
# SERVER_HOST=0.0.0.0
# SERVER_PORT=8000
